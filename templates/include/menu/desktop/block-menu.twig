<ul class="menu">
    {% for item in menu.content.items %}

        {% if loop.index == 4 %}
            <li class="menu__item " style="margin: 0; padding: 0;">
                <a href="{{ site.url }}">
                    <img class="menu__logo svg" src="{{ logo.header.url }}" alt="{{ site.title }} - Logo " width="152" height="130">
                </a>
            </li>
        {% endif %}

        <li class="menu__item menu__item--{{ item.id }} {{ item.children ? 'menu__item--has-child' }}">

            <a class="menu__link {{ item.current ? "menu__link--current" }}"
               href="{{ item.link }}"

                    {{ item.new_blank ? 'target="_blank"' }}

                    {% if item.anchor %}
                        data-anchor="{{ item.anchor }}"
                        {% if item.offset %}
                            data-offset="{{ item.offset }}"
                        {% elseif item.offset is empty %}
                            data-offset="0"
                        {% endif %}
                    {% endif %}

            >{{ item.title }}</a>

            {% if item.children %}
                <ul class=" sub-menu">

                    {% for child in item.children %}

                        <li class="sub-menu__item">

                            <a href="{{ child.link }}"

                                    {{ item.new_blank ? 'target="_blank"' }}

                                    {% if item.anchor %}
                                        data-anchor="{{ item.anchor }}"
                                        {% if item.offset %}
                                            data-offset="{{ item.offset }}"
                                        {% elseif item.offset is empty %}
                                            data-offset="0"
                                        {% endif %}
                                    {% endif %}

                            >{{ child.title }}</a>

                        </li>

                    {% endfor %}

                </ul>
            {% endif %}

        </li>
    {% endfor %}
</ul>